@page "/"
@using KS.Scheduler.Frontend.Models
@inject HttpClient Http

<PageTitle>Próximas Partidas</PageTitle>

<h1>⚽ Próximas Partidas</h1>

@if (partidas == null)
{
    <p><em>Carregando partidas...</em></p>
}
else if (!partidas.Any())
{
    <div class="alert alert-info">Nenhuma partida agendada no momento.</div>
}
else
{
    <div class="row">
        @foreach (var partida in partidas)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@partida.Local</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            @partida.DataHora.ToString("dd/MM/yyyy HH:mm")
                        </h6>
                        <p class="card-text">
                            <strong>Valor:</strong> R$ @partida.ValorPorPessoa<br />
                            <strong>Vagas:</strong> @partida.MaximoJogadores
                        </p>
                        <button class="btn btn-primary w-100">
                            Ver Detalhes / Entrar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<PartidaModel>? partidas;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            partidas = await Http.GetFromJsonAsync<List<PartidaModel>>("api/partidas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao buscar partidas: {ex.Message}");
            partidas = new List<PartidaModel>();
        }
    }
}