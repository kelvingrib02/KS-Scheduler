@page "/app"
@using KS.Scheduler.Frontend.Models
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>KS Scheduler - Próxima Partida</PageTitle>

<div class="container-fluid p-0" style="max-width: 600px; margin: auto;">

    <!-- Título do App -->
    <div class="text-center my-4">
        <h3 class="fw-bold text-primary">⚽ KS Scheduler</h3>
        <p class="text-muted">Gerencie seu futebol sem estresse</p>
    </div>

    @if (partida == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-2">Buscando a partida...</p>
        </div>
    }
    else
    {
        <!-- Card Principal da Partida -->
        <div class="card shadow-sm border-0 mb-4 rounded-3 overflow-hidden">
            <div class="card-header bg-primary text-white text-center py-3">
                <h5 class="mb-0 fw-bold">Próximo Jogo</h5>
            </div>
            <div class="card-body">
                <div class="row text-center mb-3">
                    <div class="col-6 border-end">
                        <small class="text-muted d-block">DATA</small>
                        <strong>@partida.DataHora.ToString("dd/MM")</strong> <span class="text-muted">(@partida.DataHora.ToString("ddd"))</span>
                    </div>
                    <div class="col-6">
                        <small class="text-muted d-block">HORÁRIO</small>
                        <strong>@partida.DataHora.ToString("HH:mm")</strong>
                    </div>
                </div>

                <hr class="text-muted opacity-25">

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>📍 <strong>Local:</strong></span>
                    <span class="text-end">@partida.Local</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>💰 <strong>Valor:</strong></span>
                    <span class="badge bg-success fs-6">R$ @partida.ValorPorPessoa.ToString("F2")</span>
                </div>
            </div>
        </div>

        <!-- Status e Barra de Progresso -->
        <div class="mb-4 px-2">
            <div class="d-flex justify-content-between mb-1">
                <span class="fw-bold text-secondary">Jogadores Confirmados</span>
                <span class="fw-bold @(partida.Presencas.Count >= partida.MaximoJogadores ? "text-danger" : "text-primary")">
                    @partida.Presencas.Count / @partida.MaximoJogadores
                </span>
            </div>
            <div class="progress" style="height: 10px;">
                <div class="progress-bar @(partida.Presencas.Count >= partida.MaximoJogadores ? "bg-danger" : "bg-primary")"
                     role="progressbar"
                     style="width: @(CalcularPorcentagem())%"
                     aria-valuenow="@partida.Presencas.Count"
                     aria-valuemin="0"
                     aria-valuemax="@partida.MaximoJogadores">
                </div>
            </div>
        </div>

        <!-- Botão de Ação -->
        <div class="d-grid gap-2 mb-4">
            <button class="btn btn-primary btn-lg rounded-pill shadow-sm fw-bold py-3" @onclick="AbrirModalConfirmacao">
                ✅ QUERO JOGAR
            </button>
        </div>

        <!-- Lista de Jogadores -->
        <div class="card border-0 shadow-sm rounded-3">
            <div class="card-header bg-light fw-bold text-secondary">
                Lista de Convocados
            </div>
            <ul class="list-group list-group-flush">
                @if (partida.Presencas.Any())
                {
                    @foreach (var presenca in partida.Presencas)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-3"
                                     style="width: 40px; height: 40px; font-weight: bold;">
                                    @presenca.Nome.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-bold">@presenca.Nome</h6>
                                    <small class="text-muted">@presenca.Posicao</small>
                                </div>
                            </div>
                            <button class="btn btn-sm btn-outline-danger border-0" title="Cancelar">
                                🗑️
                            </button>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-center text-muted py-4">
                        Ninguém confirmou ainda. Seja o primeiro! 🥇
                    </li>
                }
            </ul>
        </div>
    }
</div>

@code {
    private PartidaViewModel? partida;

    private string idPartidaTeste = "AED60E36-A9C6-4A8F-A8A5-CE82A6532700";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            partida = await Http.GetFromJsonAsync<PartidaViewModel>($"api/partidas/{idPartidaTeste}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao buscar partida: {ex.Message}");
        }
    }

    private double CalcularPorcentagem()
    {
        if (partida == null || partida.MaximoJogadores == 0) return 0;
        return (double)partida.Presencas.Count / partida.MaximoJogadores * 100;
    }

    private void AbrirModalConfirmacao()
    {
        Console.WriteLine("Clicou em Quero Jogar");
    }

    private void CarregarDadosFakes()
    {
        partida = new PartidaViewModel
        {
            Id = Guid.NewGuid(),
            DataHora = DateTime.Now.AddDays(2).AddHours(19),
            Local = "Arena Society Center",
            MaximoJogadores = 14,
            ValorPorPessoa = 25.00m,
            Presencas = new List<PresencaViewModel>
            {
                new PresencaViewModel { Nome = "Kelvin Ribeiro", Posicao = "Meia", Confirmado = true },
                new PresencaViewModel { Nome = "Neymar Jr", Posicao = "Atacante", Confirmado = true }
            }
        };
    }
}