@page "/home"
@using KS.Scheduler.Frontend.Models
@using KS.Scheduler.Domain.Enums
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Painel - KS Scheduler</PageTitle>

@if (errorMessage != null)
{
    <!-- TELA DE ERRO (Caso o ID esteja errado ou API fora) -->
    <div class="d-flex flex-column align-items-center justify-content-center h-100">
        <div class="text-danger mb-3" style="font-size: 3rem;">⚠️</div>
        <h3 class="text-white">Ops, algo deu errado</h3>
        <p class="text-white">@errorMessage</p>
        <button class="btn btn-outline-light mt-3" @onclick="CarregarDados">Tentar Novamente</button>
    </div>
}
else if (partida == null)
{
    <div class="d-flex flex-column align-items-center justify-content-center h-100">
        <div class="spinner-border text-primary mb-3" role="status"></div>
        <p class="text-white animate-pulse">Carregando dados da partida...</p>
    </div>
}
else
{
    <div class="container-fluid p-0 fade-in">

        <div class="hero-card mb-4 p-4">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">

                <div>
                    <div class="badge bg-success bg-opacity-20 text-white mb-2 px-3 py-2 rounded-pill">
                        ⚽ Próximo Jogo Confirmado
                    </div>
                    <h2 class="fw-bold text-white mb-1">@partida.Local</h2>

                    <div class="d-flex flex-column text-gray mt-2 gap-1">
                        <span><i class="bi bi-calendar-event me-2"></i>Data: @partida.DataHora.ToString("dd/MM/yyyy")</span>
                        <span><i class="bi bi-clock me-2"></i>Hora: @partida.DataHora.ToString("HH:mm")</span>
                        <span class=\"text-white fw-bold d-flex align-items-center\">@ObterIconeEsporte() <span class=\"ms-2\">@FormatTipoJogo(partida.TipoJogo)</span></span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-dark-glass" @onclick="AbrirMapa">
                        <i class="bi bi-geo-alt-fill text-danger me-2"></i> Local
                    </button>
                    <button class="btn btn-whatsapp" @onclick="CompartilharWhatsApp">
                        <i class="bi bi-whatsapp me-2"></i> Convidar
                    </button>
                </div>
            </div>

            <div class="mt-4">
                <div class="d-flex justify-content-between text-sm mb-1">
                    <span class="text-white fw-bold">Lotação</span>
                    <span class="text-gray">@ObterConfirmados().Count() / @partida.MaximoJogadores Jogadores</span>
                </div>
                <div class="progress bg-dark" style="height: 8px;">
                    <div class="progress-bar bg-gradient-primary" role="progressbar"
                         style="width: @(CalcularPorcentagem())%"></div>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <small class="text-gray">Total Arrecadado</small>
                    <h3 class="text-success fw-bold mb-0">R$ @CalcularTotalArrecadado().ToString("F2")</h3>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <small class="text-gray">A Receber</small>
                    <h3 class="text-warning fw-bold mb-0">R$ @CalcularTotalPendente().ToString("F2")</h3>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <small class="text-gray">Valor por Pessoa</small>
                    <h3 class="text-white fw-bold mb-0">R$ @partida.ValorPorPessoa.ToString("F2")</h3>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="list-card border-top-success">
                    <h5 class="fw-bold text-success mb-3">✅ Confirmados (@ObterConfirmados().Count())</h5>
                    <div class="player-list">
                        @foreach (var p in ObterConfirmados())
                        {
                            <div class="player-item">
                                <span class="avatar bg-success">@p.Nome.Substring(0, 1)</span>
                                <div>
                                    <div class="fw-bold text-white">@p.Nome</div>
                                    <small class="text-success-dim">@p.Posicao</small>
                                </div>
                            </div>
                        }
                        @if (!ObterConfirmados().Any())
                        {
                            <small class="text-white">Ninguém confirmado ainda.</small>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="list-card border-top-warning">
                    <h5 class="fw-bold text-warning mb-3">⏳ Pendentes</h5>
                    <div class="player-list">
                        <div class="player-item opacity-50">
                            <span class="avatar bg-warning text-dark">?</span>
                            <div>
                                <div class="fw-bold text-white">Aguardando...</div>
                                <small class="text-white">Envie o link no WhatsApp</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="list-card border-top-danger">
                    <h5 class="fw-bold text-danger mb-3">💸 Pagamento Pendente</h5>
                    <div class="player-list">
                        @foreach (var p in ObterConfirmados().Take(2))
                        {
                            <div class="player-item">
                                <span class="avatar bg-danger">@p.Nome.Substring(0, 1)</span>
                                <div class="w-100">
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-bold text-white">@p.Nome</span>
                                        <span class="text-danger fw-bold">R$ @partida.ValorPorPessoa.ToString("F0")</span>
                                    </div>
                                    <small class="text-danger-dim">Pix não identificado</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

