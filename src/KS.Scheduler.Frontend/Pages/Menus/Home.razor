@code {
    private PartidaViewModel? partida;
    private string? errorMessage;

    private string idPartidaReal = "AED60E36-A9C6-4A8F-A8A5-CE82A6532700";

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        errorMessage = null;
        try
        {

            partida = await Http.GetFromJsonAsync<PartidaViewModel>($"api/partidas/{idPartidaReal}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao conectar com a API: {ex.Message}. Verifique se o ID '{idPartidaReal}' existe no banco.";
        }
    }

    private IEnumerable<PresencaViewModel> ObterConfirmados()
    {
        if (partida == null) return new List<PresencaViewModel>();
        return partida.Presencas.Where(x => x.Confirmado);
    }

    private double CalcularPorcentagem()
    {
        if (partida == null || partida.MaximoJogadores == 0) return 0;
        return (double)ObterConfirmados().Count() / partida.MaximoJogadores * 100;
    }

    private decimal CalcularTotalArrecadado()
    {
        if (partida == null) return 0;
        return ObterConfirmados().Count() * partida.ValorPorPessoa;
    }

    private decimal CalcularTotalPendente()
    {
        if (partida == null) return 0;
        return 2 * partida.ValorPorPessoa;
    }

    private async Task CompartilharWhatsApp()
    {
        if (partida == null) return;
        var texto = $"Fala galera! Bora pro jogo no {partida.Local} dia {partida.DataHora:dd/MM} às {partida.DataHora:HH:mm}. Confirme aqui: https://ks-scheduler.com/convite/{partida.Id}";
        var url = $"https://wa.me/?text={Uri.EscapeDataString(texto)}";
        await JS.InvokeVoidAsync("open", url, "_blank");
    }

    private async Task AbrirMapa()
    {
        if (partida == null) return;
        var url = $"https://www.google.com/maps/search/?api=1&query={Uri.EscapeDataString(partida.Local)}";
        await JS.InvokeVoidAsync("open", url, "_blank");
    }

    private string ObterIconeEsporte()
    {
        if (partida == null) return "🎮";

        return partida.TipoJogo.ToString() switch
        {
            "1" => "⚽",
            "Futsal" => "⚽",
            "Campo" => "⚽",
            "Futevolei" => "🏐",
            "Basquete" => "🏀",
            "Tenis" => "🎾",
            _ => "🏆"
        };
    }

    private string FormatTipoJogo(TipoJogo tipo)
    {
        var nome = tipo.ToString();

        if (nome == "Society") return "Futebol Society";
        if (nome == "Futsal") return "Futsal";
        if (nome == "Campo") return "Campo";
        if (nome == "Futevolei") return "Futevolei";

        return nome;
    }
}