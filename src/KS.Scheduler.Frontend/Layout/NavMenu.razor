@inject NavigationManager NavManager

<div class="sidebar-container h-100 d-flex flex-column">

    <div class="logo-section p-4">
        <div class="fw-bold text-white fs-4">KS <span class="text-gradient">Scheduler</span></div>
    </div>

    <div class="border-top border-secondary border-opacity-25">
        <nav class="flex-column nav-pills px-2 mt-auto p-4">           
            <NavLink class="nav-link d-flex align-items-center mb-2" href="home" Match="NavLinkMatch.All">
                <span class="icon-box me-3">🏟️</span>
                <span class="fw-bold">Resumo do Jogo</span>
            </NavLink>

            <NavLink class="nav-link d-flex align-items-center mb-2" href="criarpartida">
                <span class="icon-box me-3">⚽</span>
                <span class="fw-bold">Criar Partida</span>
            </NavLink>

            <NavLink class="nav-link d-flex align-items-center mb-2" href="historico">
                <span class="icon-box me-3">📜</span>
                <span class="fw-bold">Histórico</span>
            </NavLink>

            <NavLink class="nav-link d-flex align-items-center mb-2" href="financeiro">
                <span class="icon-box me-3">💰</span>
                <span class="fw-bold">Financeiro</span>
            </NavLink>

            <NavLink class="nav-link d-flex align-items-center mb-2" href="estatisticas">
                <span class="icon-box me-3">📊</span>
                <span class="fw-bold">Estatísticas</span>
            </NavLink>
        </nav>
    </div>

    <div class="mt-auto p-4 border-top border-secondary border-opacity-25">
        <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-3 text-white fw-bold"
                 style="width: 40px; height: 40px; font-size: 0.9rem;">
                KR
            </div>
            <div class="d-flex flex-column">
                <span class="text-white fw-bold" style="font-size: 0.9rem;">Kelvin Ribeiro</span>
                <small class="text-white" style="font-size: 0.75rem;">kelvin@email.com</small>
            </div>
        </div>

        <button class="btn w-100 btn-logout" @onclick="Logout">
            Sair do sistema
        </button>

    </div>
</div>

@code {
    [Parameter] public EventCallback OnLinkClick { get; set; }

    private void Logout()
    {
        NavManager.NavigateTo("/");
    }
}

<style>
    .sidebar-container {
        background-color: #1e293b;
        border-right: 1px solid rgba(255,255,255,0.05);
    }

    .text-gradient {
        background: linear-gradient(135deg, #34d399 0%, #059669 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .nav-pills .nav-link.active {
        background-color: rgba(5, 150, 105, 0.06);
        color: #10b981;
    }

    .nav-link {
        color: #94a3b8;
        padding: 0.8rem 1rem;
        border-radius: 12px;
        transition: all 0.2s ease;
    }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.05);
            color: #fff;
            transform: translateX(5px);
        }

        .nav-link.active {
            background: linear-gradient(135deg, #34d399 0%, #059669 100%) 0%, transparent 100%);
            color: #10b981;
            border-left: 3px solid #10b981;
        }

    .icon-box {
        font-size: 1.2rem;
        filter: grayscale(100%);
        transition: filter 0.2s;
    }

    .nav-link.active .icon-box,
    .nav-link:hover .icon-box {
        filter: grayscale(0%);
    }

    .btn-logout {
        background: linear-gradient(135deg, #34d399 0%, #059669 100%);
        color: white;
        border: none;
        padding: 0.5rem;
        font-weight: bold;
        border-radius: 12px;
        transition: transform 0.2s;
        box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.3);
    }

        .btn-logout:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 15px 25px -5px rgba(16, 185, 129, 0.4);
        }
</style>